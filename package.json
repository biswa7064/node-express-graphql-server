{
	"name": "graphql-server",
	"version": "1.0.0",
	"scripts": {
		"build:dev": "tsc -w --outDir dist",
		"serve:dev": "SET NODE_ENV=development&& nodemon --watch src --exec ts-node src/app.ts",
		"start:dev": "npm run build:dev && npm run serve:dev",
		"build:prod": "tsc",
		"start:prod": "node dist/app.js",
		"prestart:prod": "npm run build:prod",
		"test": "jest"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.5",
		"@types/node": "^18.11.18",
		"jest": "^29.7.0",
		"nodemon": "^2.0.20",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@apollo/server": "^4.9.3",
		"@types/cors": "^2.8.14",
		"axios": "^1.3.2",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-graphql": "^0.12.0",
		"graphql": "^16.6.0",
		"type-graphql": "^1.1.1"
	}
}
